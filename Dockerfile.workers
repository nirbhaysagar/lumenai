FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Build Next.js app (optional, but good to ensure types are correct)
# RUN npm run build 
# We skip build for workers to save time, relying on ts-node

# Set environment variables (should be overridden at runtime)
ENV NODE_ENV=production

# Start workers
CMD ["npm", "run", "start:workers"]
